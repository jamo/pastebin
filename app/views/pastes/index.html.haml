- model_class = Paste
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:filename)
      %th= model_class.human_attribute_name(:nick)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:encoding)
      %th= model_class.human_attribute_name(:key)
      %th= model_class.human_attribute_name(:size)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @pastes.each do |paste|
      %tr
        %td= link_to paste.id, paste_path(paste.key)
        %td= paste.filename
        %td= paste.nick
        %td= paste.title
        %td= paste.encoding
        %td= paste.key
        %td= paste.size
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_paste_path(paste.key), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), paste_path(paste.key), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_paste_path, :class => 'btn btn-primary'
