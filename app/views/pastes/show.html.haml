    %a.close{"data-dismiss" => "alert"} Ã—
    = content_tag :div, notice, :id => "flash_success"


- model_class = Paste
.page-header
  %h1= @paste.title
.row
  .span2
    %strong= model_class.human_attribute_name(:filename) + ':'
    = @paste.filename
  .span2
    %strong= model_class.human_attribute_name(:nick) + ':'
    = @paste.nick
  .span2
    %strong= model_class.human_attribute_name(:title) + ':'
    = @paste.title
  .span2
    %strong= model_class.human_attribute_name(:encoding) + ':'
    = @paste.encoding
  .span2
    %strong= model_class.human_attribute_name(:size) + ':'
    = @paste.size
    %br
.row
  .span9
    = raw @html
.row
  .span9
    =label_tag :raw
    =text_area_tag :foo,  @paste.body, class: 'input-block-level', rows: 10

.form-actions
  = link_to "New Paste", new_paste_path, :class => "btn btn-primary "
  - if @current_user.admin?
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_paste_path(@paste.key), :class => 'btn'